<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/app_background"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- textview for current question -->
        <TextView
            android:id="@+id/access_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="#d3d3d3"
            android:textSize="24sp"
            tools:text="testing the look of the questions" />

        <!-- view image with the question -->
        <ImageView
            android:id="@+id/access_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_android_cool" /> <!--add image for testing/design purposes-->

        <!-- layout for progress bar and the indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="10"
                android:minHeight="55dp"
                android:progress="0" /> <!--fixed progress-->

            <TextView
                android:id="@+id/access_question_num_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="15sp"
                tools:text="0/10" /> <!-- testing-->

        </LinearLayout>

       <TextView
           android:id="@+id/access_option_one"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:background="@drawable/default_option_border_bg"
           android:gravity="center"
           android:padding="8dp"
           android:textColor="#d3d3d3"
           android:textSize="18sp"
           tools:text="Pick me" /> <!-- testing -->

        <TextView
            android:id="@+id/access_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#d3d3d3"
            android:textSize="18sp"
            tools:text="Pick me" /> <!-- testing -->

        <TextView
            android:id="@+id/access_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#d3d3d3"
            android:textSize="18sp"
            tools:text="Pick me" /> <!-- testing -->

        <TextView
            android:id="@+id/access_option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#d3d3d3"
            android:textSize="18sp"
            tools:text="Pick me" /> <!-- testing -->

        <TextView
            android:id="@+id/access_option_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#d3d3d3"
            android:textSize="18sp"
            tools:text="Pick me" /> <!-- testing -->

        <!-- Submit button for user to submit answer or proceed to next question -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_margin="8dp"
            android:text="Submit Answer"
            android:textColor="#d3d3d3"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>